@page
@model Nordlager.Backend.Areas.News.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>NewsItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsItem.Id" />
            <div class="form-group">
                <label asp-for="NewsItem.Title" class="control-label"></label>
                <input asp-for="NewsItem.Title" class="form-control" />
                <span asp-validation-for="NewsItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsItem.Description" class="control-label"></label>
                <input asp-for="NewsItem.Description" class="form-control" />
                <span asp-validation-for="NewsItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsItem.ValidFrom" class="control-label"></label>
                <input asp-for="NewsItem.ValidFrom" class="form-control" />
                <span asp-validation-for="NewsItem.ValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsItem.ValidTo" class="control-label"></label>
                <input asp-for="NewsItem.ValidTo" class="form-control" />
                <span asp-validation-for="NewsItem.ValidTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
